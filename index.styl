@require './node_modules/nvd3/build/nv.d3.min.css'

.presentation
    background-color #1A1B13
    color rgb(196, 197, 180)
    position absolute

    font-family "Andale Mono", monospace
    margin 0px !important 
    font-size 1em

    pre
        font-family "Andale Mono", monospace
        margin 0px !important

    table.plottable
        color rgb(196, 197, 180)
        border-spacing 0px
        border-collapse collapse

        td 
            padding 0.25em
            border solid 1px #333

    svg
        background-color white
        &.correlation-matrix
            font 10px sans-serif
            padding 10px

            .axis, .frame
                shape-rendering crispEdges

            .axis 
                line
                    stroke #ddd
                path
                    display none

            .frame
                fill none
                stroke #aaa

            circle
                fill-opacity .7
                &.hidden
                    fill #ccc !important

            .extent
                fill #000
                fill-opacity .125
                stroke #fff

        .multi-chart
            .hide-y2 .y2 line, .hide-y1 .y1 line
                display none

    .d3-tip
        background rgba(0, 0, 0, 0.8)
        border-radius 2px
        color #fff
        line-height 1
        padding 12px
    
    .horizontal, .vertical
        box-sizing border-box

    .horizontal
        border-right 1px solid #ccc

    .regression
        .axis line
            stroke black
            stroke-width 1

        .domain
            fill none
            shape-rendering inherit
            stroke #000

    .vertical
        border-bottom 1px solid #ccc