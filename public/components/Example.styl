@require '../../index.styl'

.example
    
    .title
        color #2d2d2d
        font-size 24px
        font-weight normal
        margin-bottom 5px

    .description
        color #555
        font-size 16px
        font-weight normal
        margin-bottom 25px
        white-space pre

    .content
        display flex
        flex-direction column

        .tab-container
            display inline-block

            .languages
                display flex

                > div
                    border 1px solid #ccc
                    border-bottom none
                    border-top-left-radius 4px
                    border-top-right-radius 4px
                    box-sizing border-box
                    color #ccc
                    cursor pointer
                    font-size 14px
                    padding 5px 8px 5px 8px
                    
                    &.selected
                        color #000

            .editor
                border 1px solid #ccc

        .error
            color #c5695c
            padding-top 10
            text-indent 10

        .error, .presentation
            border 1px solid #ccc
            border-top none
            overflow auto
            position relative
            height 300px